{
	"compilerOptions": {
		"pretty": true,
		"target": "ES2015",
		"module": "ES2015",
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"strict": true,
		"outDir": "dist/build",
		"rootDir": "src",
		"lib": ["dom", "esnext"]
	},
	"include": ["src"]
}
